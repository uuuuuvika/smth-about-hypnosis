[Unit]
Description=RGB LED Matrix video viewer
After=multi-user.target
Wants=multi-user.target

[Service]
Type=simple
User=root
Group=root
EnvironmentFile=-/etc/default/rpi-video-viewer
ExecStart=/bin/bash -lc '/usr/local/bin/video-viewer ${VIDEO_VIEWER_OPTS:-} -T${VIDEO_THREADS:-1} ${VIDEO_INPUTS:-}'
Restart=always
RestartSec=2s
TimeoutStopSec=5s
StandardOutput=journal
StandardError=inherit

[Install]
WantedBy=multi-user.target
